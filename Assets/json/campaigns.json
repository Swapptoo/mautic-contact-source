  "definitions": {
    "campaigns": {
      "headerTemplate": "Campaign ID {{self.campaign}}",
      "type": "object",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "campaign": {
          "title": "Campaign",
          "propertyOrder": 10,
          "default": 1,
          "type": "integer",
          "format": "select",
          "options": {
            "infoText": "Which campaign do you wish to allow this server to feed contacts into?"
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "Campaign 1"
