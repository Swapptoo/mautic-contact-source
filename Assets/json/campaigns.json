{
  "title": "Campaigns",
  "$schema": "campaigns.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "campaigns": {
      "title": "Campaigns",
      "type": "array",
      "format": "grid",
      "uniqueItems": true,
      "options": {
        "disable_collapse": true
      },
      "items": {
        "title": "Campaign",
        "$ref": "#/definitions/campaign"
      }
    }
  },
  "definitions": {
    "campaign": {
      "headerTemplate": " " ,
      "type": "object",
      "format": "grid",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "campaignId": {
          "title": "Campaign",
          "propertyOrder": 10,
          "default": "0",
          "type": "string",
          "format": "select",
          "options": {
            "grid_columns": 1,
            "infoText": "Select a campaign to allow this source to post contacts into. This is a whitelist of campaigns. If no campaigns are selected the source will not be able to send you any contacts."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 0,
                  "title": "-- Please create a Campaign --"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "cost": {
          "title": "CPL",
          "type": "number",
          "propertyOrder": 30,
          "default": 0,
          "options": {
            "grid_columns": 1,
            "infoText": "Cost Per Lead. How much is paid to this source whenever a contact is accepted?"
          }
        },
        "realTime": {
          "title": "Real Time",
          "type": "boolean",
          "format": "checkbox",
          "propertyOrder": 40,
          "default": false,
          "options": {
            "grid_columns": 1,
            "infoText": "We will attempt to synchronously process contacts through the entire workflow at the time of posting. This will ignore any delays configured. Warning: Performance will be impacted by the latency of all third-party integrations combined."
          }
        },
        "scrubRate": {
          "title": "Scrub Rate",
          "type": "integer",
          "propertyOrder": 50,
          "format": "range",
          "default": 0,
          "maximum": 100,
          "step": 1,
          "options": {
            "grid_columns": 1,
            "infoText": "The percentage of contacts that will be randomly predetermined as 'rejected'. Disabled by default at 0%"
          }
        },
        "limits": {
          "title": "Caps",
          "type": "array",
          "format": "table",
          "propertyOrder": 60,
          "uniqueItems": true,
          "options": {
            "grid_columns": 12,
            "disable_collapse": true,
            "infoText": "Limit the number of contacts that can be accepted from this source in a given time frame."
          },
          "items": {
            "title": "Cap",
            "$ref": "#/definitions/limit"
          }
        }
      }
    },
    "limit": {
      "comment": "Duplicated from MauticContactClient/Assets/json/limits.json",
      "headerTemplate": "{{self.quantity}} {{self.scope}} {{self.value}}",
      "type": "object",
      "id": "cache",
      "default" :{
        "scope": "5",
        "duration": "P1D"
      },
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "quantity": {
          "title": "Quantity",
          "type": "integer",
          "propertyOrder": 10,
          "default": 10000,
          "options": {
            "grid_columns": 1,
            "infoText": "The maximum number of acceptable contacts for this cap."
          }
        },
        "scope": {
          "title": "Scope",
          "propertyOrder": 20,
          "options": {
            "grid_columns": 2,
            "infoText": "How wide do you want this limit to reach?"
          },
          "enumSource": [
            {
              "#comment": "Wider scopes are currently excluded from this list, such as by category and utm_source (without campaign), to keep the interface simple",
              "source": [
                {
                  "value": 1,
                  "title": "conversions for this campaign"
                },
                {
                  "value": 5,
                  "title": "conversions for this campaign and original source"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "value": {
          "title": "Original UTM Source",
          "type": "string",
          "propertyOrder": 30,
          "options": {
            "grid_columns": 1,
            "infoText": "Only applicable if scope is not set to total."
          }
        },
        "duration": {
          "title": "Duration",
          "propertyOrder": 40,
          "type": "string",
          "format": "select",
          "options": {
            "grid_columns": 2,
            "infoText": "Specify how long this cap should last, before expiring and allowing the contact to go to other clients within the scope."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": "PT1I",
                  "title": "per minute"
                },
                {
                  "value": "PT10I",
                  "title": "per 10 minutes"
                },
                {
                  "value": "PT30I",
                  "title": "per 30 minutes"
                },
                {
                  "value": "PT1H",
                  "title": "per hour"
                },
                {
                  "value": "PT6H",
                  "title": "per 6 hours"
                },
                {
                  "value": "PT12H",
                  "title": "per 12 hours"
                },
                {
                  "value": "P1D",
                  "title": "per day"
                },
                {
                  "value": "P2D",
                  "title": "per 2 days"
                },
                {
                  "value": "P3D",
                  "title": "per 3 days"
                },
                {
                  "value": "P4D",
                  "title": "per 4 days"
                },
                {
                  "value": "P5D",
                  "title": "per 5 days"
                },
                {
                  "value": "P6D",
                  "title": "per 6 days"
                },
                {
                  "value": "P1W",
                  "title": "per Week"
                },
                {
                  "value": "P2W",
                  "title": "per 2 Weeks"
                },
                {
                  "value": "P3W",
                  "title": "per 3 Weeks"
                },
                {
                  "value": "P30D",
                  "title": "per 30 days"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        }
      }
    }
  }
}