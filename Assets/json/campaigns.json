{
  "title": "Campaigns",
  "$schema": "campaigns.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "rules": {
      "title": "Campaigns",
      "type": "array",
      "format": "grid",
      "uniqueItems": true,
      "options": {
        "disable_collapse": true
      },
      "items": {
        "title": "Campaign",
        "$ref": "#/definitions/campaigns"
      }
    }
  },
  "definitions": {
    "campaigns": {
      "headerTemplate": "Campaign ID {{self.campaign}}",
      "type": "object",
      "format": "grid",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "campaign": {
          "title": "Campaign",
          "propertyOrder": 10,
          "default": 1,
          "type": "integer",
          "format": "select",
          "options": {
            "infoText": "Select a campaign to allow this server to post contacts into. This is a whitelist of campaigns. If no campaigns are selected the server will not be able to send you any contacts."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "Campaign 1"
                },
                {
                  "value": 2,
                  "title": "Campaign 2"
                },
                {
                  "value": 3,
                  "title": "Campaign 3"
                },
                {
                  "value": 4,
                  "title": "Campaign 3"
                },
                {
                  "value": 5,
                  "title": "Campaign 3"
                },
                {
                  "value": 6,
                  "title": "Campaign 3"
                },
                {
                  "value": 7,
                  "title": "Campaign 3"
                },
                {
                  "value": 8,
                  "title": "Campaign 3"
                },
                {
                  "value": 9,
                  "title": "Campaign 3"
                },
                {
                  "value": 10,
                  "title": "Campaign 3"
                },
                {
                  "value": 11,
                  "title": "Campaign 3"
                },
                {
                  "value": 12,
                  "title": "Campaign 3"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "utmSource": {
          "title": "UTM Source",
          "type": "string",
          "propertyOrder": 20,
          "options": {
            "infoText": "Optionally override the UTM Source field of each contact when first saved. Leave blank to allow the server to post any value. Override occurs after limits are evaluated below."
          }
        },
        "attribution": {
          "comment": "Using type 'string' here so that a null value can be saved.",
          "title": "Revenue/Cost",
          "type": "string",
          "propertyOrder": 30,
          "options": {
            "infoText": "Optionally override the attribution field of each contact when first saved. Leave blank to allow the server to post any value. Positive numbers equate to revenue, negative numbers to cost."
          }
        },
        "scrubRate": {
          "title": "Scrub Rate",
          "type": "integer",
          "propertyOrder": 40,
          "format": "range",
          "default": 0,
          "maximum": 100,
          "step": 1,
          "options": {
            "infoText": "The percentage of contacts that will be randomly predetermined as 'rejected'. Disabled by default at 0%"
          }
        },
        "limits": {
          "title": "Limits",
          "type": "array",
          "format": "table",
          "propertyOrder": 50,
          "uniqueItems": true,
          "options": {
            "disable_collapse": true
          },
          "items": {
            "title": "Limit",
            "$ref": "#/definitions/limit"
          }
        }
      }
    },
    "limit": {
      "comment": "Duplicated from MauticContactClient/Assets/json/limits.json",
      "headerTemplate": "{{self.quantity}} {{self.scope}} {{self.value}}",
      "type": "object",
      "id": "cache",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "quantity": {
          "title": "Quantity",
          "type": "integer",
          "propertyOrder": 10,
          "default": 10000,
          "options": {
            "infoText": "The maximum number of acceptable contacts for this limit."
          }
        },
        "scope": {
          "title": "Scope",
          "propertyOrder": 20,
          "default": 1,
          "options": {
            "infoText": "How wide do you want this duplicate check to reach?"
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "total contacts"
                },
                {
                  "value": 3,
                  "title": "contacts where the original UTM Source is"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "value": {
          "title": "UTM Source",
          "type": "string",
          "propertyOrder": 30,
          "options": {
            "infoText": "Only applicable if scope is not set to total."
          }
        },
        "duration": {
          "title": "Duration",
          "propertyOrder": 40,
          "type": "string",
          "format": "select",
          "options": {
            "infoText": "Specify how long this limit should last, before expiring and allowing the contact to go to other clients within the scope."
          },
          "default": "P30D",
          "enumSource": [
            {
              "source": [
                {
                  "value": "PT1I",
                  "title": "per minute"
                },
                {
                  "value": "PT10I",
                  "title": "per 10 minutes"
                },
                {
                  "value": "PT30I",
                  "title": "per 30 minutes"
                },
                {
                  "value": "PT1H",
                  "title": "per hour"
                },
                {
                  "value": "PT6H",
                  "title": "per 6 hours"
                },
                {
                  "value": "PT12H",
                  "title": "per 12 hours"
                },
                {
                  "value": "P1D",
                  "title": "per day"
                },
                {
                  "value": "P2D",
                  "title": "per 2 days"
                },
                {
                  "value": "P3D",
                  "title": "per 3 days"
                },
                {
                  "value": "P4D",
                  "title": "per 4 days"
                },
                {
                  "value": "P5D",
                  "title": "per 5 days"
                },
                {
                  "value": "P6D",
                  "title": "per 6 days"
                },
                {
                  "value": "P1W",
                  "title": "per Week"
                },
                {
                  "value": "P2W",
                  "title": "per 2 Weeks"
                },
                {
                  "value": "P3W",
                  "title": "per 3 Weeks"
                },
                {
                  "value": "P30D",
                  "title": "per 30 days"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        }
      }
    }
  }
}