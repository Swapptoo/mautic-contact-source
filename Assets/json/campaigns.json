                },
                {
                  "value": "P1W",
                  "title": "per Week"
                },
                {
                  "value": "P2W",
                  "title": "per 2 Weeks"
                },
                {
                  "value": "P3W",
                  "title": "per 3 Weeks"
                },
                {
                  "value": "P30D",
                  "title": "per 30 Days"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        }
      }
    }
  }
